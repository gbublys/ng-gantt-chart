{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "./",
    "paths": {
      "gantt-chart-lib": [
        "dist/gantt-chart-lib"
      ],
      "gantt-chart-lib/*": [
        "dist/gantt-chart-lib/*"
      ],
      "gantt-chart": [
        "dist/gantt-chart"
      ],
      "gantt-chart/*": [
        "dist/gantt-chart/*"
      ]
    }
  }
}